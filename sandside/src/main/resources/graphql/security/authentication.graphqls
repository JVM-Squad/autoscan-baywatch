extend type Mutation {
    login(username: String!, password: String!, remember: Boolean): User
    logout: Void
    refreshSession: Session
}

extend type Query {
    currentUser: User
}

type User {
    _id: ID
    _createdAt: String
    login: String
    name: String
    mail: String
    role: Role
}

type Session {
    user: User
    maxAge: Int
}

enum Role {
    SYSTEM, ADMIN, MANAGER, USER, ANONYMOUS
}